---
import Layout from "../layouts/Main-Layout.astro";
import Menu from "../components/Menu.astro";

const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, "");

const fotografi = [
  {nome: "Nome Fotografo 1"},
  {nome: "Nome Fotografo 2"},
  {nome: "Nome Fotografo 3"},
  // Aggiungi qui i nomi dei fotografi
];
---

<Layout title='Credits | SEI Museum'>
  <main class='flex overflow-hidden flex-row h-screen bg-neutral-900'>
    <Menu HasSectionNumber={false} variant='home' title='Credits' />

    <div class='flex overflow-y-auto flex-1 justify-center items-center no-scrollbar'>
      <div class='px-16 py-24 max-w-3xl'>
        <!-- Progetto Grafico -->
        <section class='mb-16'>
          <h2 class='mb-6 text-2xl font-bold text-white'>Progetto Grafico e Interazione interaction design</h2>
          <div class='space-y-2 text-lg leading-relaxed text-white'>
            <p><strong>Studio HYPEBANG.IT</strong></p>
            <p><strong>Maria Pia Erice</strong> – Designer</p>
            <p><strong>Maurizio Schifano</strong> – Interaction Designer</p>
          </div>
        </section>

        <!-- Cura Scientifica -->
        <section class='mb-16'>
          <h2 class='mb-6 text-2xl font-bold text-white'>Cura Scientifica e Contenuti</h2>
          <div class='text-lg leading-relaxed text-white'>
            <p><strong>Dott. Francesco Ciulla</strong> – Naturalista</p>
          </div>
        </section>

        <!-- Fotografie -->
        <section class='mb-16'>
          <h2 class='mb-6 text-2xl font-bold text-white'>Fotografie di</h2>
          <div class='space-y-2 text-lg leading-relaxed text-white'>
            {fotografi.map((fotografo) => <p>{fotografo.nome}</p>)}
          </div>
        </section>

        <!-- Finanziamento PNRR -->
        <section class='mb-16'>
          <h2 class='mb-6 text-2xl font-bold text-white'>Realizzato grazie al</h2>
          <div class='space-y-4 text-lg leading-relaxed text-white'>
            <p><strong>Bando PNRR</strong></p>
            <p>Missione 1 – Digitalizzazione, innovazione, competitività e cultura</p>
            <p>Componente 3 – Cultura 4.0 (M1C3)</p>
            <p>Misura 2 – "Protezione e valorizzazione dell'architettura e del paesaggio rurale"</p>
            <p class='mt-6'>Next Generation EU</p>
            <p>CUP: G87B22000530004</p>
            <p>Progetto ID PNRR: M1C3 - 2.2 - 2022, n. progressivo 002501</p>
            <p class='mt-6 text-xl font-semibold'>"CASA DEL SALINAIO" della salina Ettore Infersa</p>
          </div>
        </section>
      </div>
    </div>
  </main>
</Layout>

<style>
  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }
  .no-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>
