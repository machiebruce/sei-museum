---
import Buttons from "../components/Buttons.astro";
import Menu from "../components/Menu.astro";
import Layout from "../layouts/Main-Layout.astro";

import {pageNames} from "../utils/constants.mjs";
---

<Layout title='Saline Ettore Infersa'>
  <main class='flex flex-row'>
    <Menu HasSectionNumber={true} title={pageNames.page01.title} sectionNumber={pageNames.page01.sectionNumber} />

    <div class='grid grid-cols-2 gap-8 w-full p-32'>
      <div class='col-span-full text-white h-fit'>
        <p class='text-7xl font-extralight'>{pageNames.page01.sectionNumber}</p>
        <p class='text-white font-bold text-3xl'>{pageNames.page01.title}</p>
      </div>
      <!--video1-->
      <div class='flex flex-col gap-y-8'>
        <!-- <video controls>
          <source src='src/assets/video/placeholder_video.mp4' type='video/mp4' />
          Your browser does not support the video tag.
        </video> -->
        <div class='rounded-2xl overflow-clip group relative'>
          <div class='z-50 absolute inset-0 w-full h-full flex justify-center items-center bg-neutral-500/0 hover:bg-neutral-500/20 animation-smooth'><img src='../../public/play.svg' alt='play video' class='z-50 opacity-0 group-hover:scale-110 group-hover:opacity-100 animation-smooth' /></div>
          <img src='/src/assets/thumbs.png' alt='placeholder' class='overflow-clip group-hover:scale-110 animation-smooth object-cover aspect-video' />
        </div>
        <p class='text-white font-bold text-3xl uppercase'>Inaugurazione</p>
      </div>
      <!--video2-->
      <div class='flex flex-col gap-y-8'>
        <!-- <video controls>
          <source src='src/assets/video/placeholder_video.mp4' type='video/mp4' />
          Your browser does not support the video tag.
        </video> -->
        <div class='rounded-2xl overflow-clip group item relative'>
          <div class='z-50 absolute inset-0 w-full h-full flex justify-center items-center bg-neutral-500/20 hover:bg-neutral-500/0 animation-smooth'><img src='../../public/play.svg' alt='play video' class='z-50 opacity-0 group-hover:scale-110 group-hover:opacity-100 animation-smooth' /></div>
          <img src='https://images.unsplash.com/photo-1636747242721-57375c7c0f22?q=80&w=2075&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D' alt='placeholder' class='overflow-clip group-hover:scale-110 animation-smooth object-cover aspect-video' />
        </div>
        <p class='text-white font-bold text-3xl uppercase'>Il restauro</p>
      </div>
      <!--Page controls-->
      <div class='flex gap-4 col-span-full'>
        <span class='ml-auto'></span>
        <!-- <Buttons hasIconLeft={true} srcIcon='/public/arrowLeft.svg' label='' link='javascript:history.go(-1)' /> -->
        <Buttons hasIconRight={true} srcIcon='/public/arrowRight.svg' label='Prossimo contenuto' link="03" />
      </div>
    </div>

    <a href='01-eng'><img src='/src/assets/ita.svg' alt='switch to english' class='absolute top-8 right-8 hover:opacity-80 hover:scale-110 animation-smooth' /></a>
  </main>
</Layout>
