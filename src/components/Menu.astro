---
export interface Props {
  HasSectionNumber?: boolean;
  title: string;
  sectionNumber: string;
}

import logo from "./../../public/favicon.svg";
import menu from "./../../public/menu.svg";

// Props
const {HasSectionNumber = true, title = "Menu", sectionNumber = "01"} = Astro.props as Props;
---

<div class='bg-primary-500 p-8 absolute inset-y-0 left-0 flex flex-col justify-between items-center gap-y-16'>
  <!--top-->
  <div><img class='w-24' src={logo.src} alt='Saline ettore infersa logo' /></div>
  <!--middle-->
  <div class='gap-16 flex flex-col justify-end flex-1 w-24'>
    <!--title-->

    
      <p class='text-white text-center font-bold text-2xl uppercase whitespace-nowrap -rotate-90'>{title}</p>
    {
      HasSectionNumber && (
        
          <p class='text-white font-extralight text-6xl whitespace-nowrap -rotate-90'>{sectionNumber}</p>
        
      )
    }
  </div>
  <!--bottom-->
  <a href='menu.h' class='flex flex-col items-center hover:opacity-80 hover:-translate-y-2 animation-smooth'>
    <img class='w-12' src={menu.src} alt='MENU' />
    <p class='text-white font-bold'>MENU</p>
  </a>
</div>
