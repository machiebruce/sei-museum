---
import Layout from "../layouts/Main-Layout.astro";
import Menu from "../components/Menu.astro";
import Card from "../components/Card.astro";

import {pageNames} from "../utils/constants.mjs";
---

<Layout title='Saline Ettore Infersa'>
  <main class='flex flex-row'>
    <Menu HasSectionNumber={false} title='Home' />
    <div class='snap-x flex-1 flex items-center justify-start gap-16 overflow-x-scroll scroll-pr-72 no-scrollbar'>
      <div class='ml-16'><Card HasTools={false} sectionNumber={pageNames.page01.sectionNumber} title={pageNames.page01.title} href={pageNames.page01.sectionNumber} image={pageNames.page01.image} /></div>

      <Card HasTools={false} sectionNumber={pageNames.page02.sectionNumber} title={pageNames.page02.title} href={pageNames.page02.sectionNumber} image={pageNames.page02.image} />
      
      <Card sectionNumber={pageNames.page03.sectionNumber} title={pageNames.page03.title} href={pageNames.page03.sectionNumber} image={pageNames.page03.image} />
      <Card sectionNumber={pageNames.page04.sectionNumber} title={pageNames.page04.title} href={pageNames.page04.sectionNumber} image={pageNames.page04.image} />
      <Card sectionNumber={pageNames.page05.sectionNumber} title={pageNames.page05.title} href={pageNames.page05.sectionNumber} image={pageNames.page05.image} />
      <Card sectionNumber={pageNames.page06.sectionNumber} title={pageNames.page06.title} href={pageNames.page06.sectionNumber} image={pageNames.page06.image} />
      <Card sectionNumber={pageNames.page07.sectionNumber} title={pageNames.page07.title} href={pageNames.page07.sectionNumber} image={pageNames.page07.image} />
      <Card sectionNumber={pageNames.page08.sectionNumber} title={pageNames.page08.title} href={pageNames.page08.sectionNumber} image={pageNames.page08.image} />
      <Card sectionNumber={pageNames.page09.sectionNumber} title={pageNames.page09.title} href={pageNames.page09.sectionNumber} image={pageNames.page09.image} />
      <div class='min-w-32'>a</div>
    </div>

    <!-- <a href='http://'><img src='/src/assets/eng.svg' alt='change language' class='absolute top-8 right-8 hover:opacity-80 hover:scale-110 animation-smooth' /></a> -->
  </main>
</Layout>
