---
import Layout from "../layouts/Main-Layout.astro";
import CardHome from "../components/CardHome.astro";

// Recuperiamo il baseUrl per i link
const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, "");

const categories = [
  {
    title: "Gli Oggetti del Museo",
    href: `${baseUrl}/objects`,
    image: `${baseUrl}/bg-oggetti.png`,
    subtitle: "La Storia",
    sectionNumber: "01",
    description: "Strumenti autentici che raccontano secoli di tradizione salinara e il mestiere antico della raccolta del sale.",
    HasDescription: true,
  },
  {
    title: "Le Specie delle Saline",
    href: `${baseUrl}/species`,
    image: `${baseUrl}/bg-specie.jpg`,
    subtitle: "La Fauna",
    sectionNumber: "02",
    description: "Un ecosistema unico dove convivono fenicotteri, aironi e una ricca vegetazione adattata all'acqua salata.",
    HasDescription: true,
  },
  {
    title: "Nidificazioni dal vivo",
    href: `${baseUrl}/live`,
    image: `${baseUrl}/bg-live.jpg`,
    subtitle: "Camera live",
    sectionNumber: "03",
    description: "Osserva in diretta le nidificazioni nelle saline.",
    HasDescription: true,
  },
];
---

<Layout title='Home | SEI Museum'>
  <main class='flex overflow-hidden flex-col justify-between items-center py-16 w-full h-screen bg-neutral-900'>
    <div class='flex flex-col items-center'>
      <img src={`${baseUrl}/sei_logo.svg`} alt='Logo SEI Museum' class='w-32 h-auto' />
    </div>

    <div class='flex flex-row gap-12 items-stretch mx-auto w-1/2'>
      {
        categories.map((cat) => (
          <div>
            <CardHome sectionNumber={cat.sectionNumber} title={cat.title} description={cat.description} HasDescription={cat.HasDescription} href={cat.href} image={cat.image} />
          </div>
        ))
      }
    </div>

    <!-- Bottone Credits -->

    <a href={`${baseUrl}/credits`}
    class='px-8 py-4 text-lg font-bold tracking-wide text-black uppercase bg-white rounded-full transition-all duration-300 hover:bg-white/90 hover:-translate-y-1 hover:shadow-2xl' > Credits </a>
  </main>
</Layout>

<style>
  .transition-all {
    transition-property: all;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 500ms;
  }
</style>
